<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="stoyanov.valentin.mycar.activities.NewInsuranceActivity"
    tools:showIn="@layout/activity_new_insurance">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--<android.support.design.widget.TextInputLayout
            android:id="@+id/til_new_insurance_date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:focusable="false"
                android:cursorVisible="false"
                android:hint="@string/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>-->

        <include layout="@layout/til_date"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="2"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_new_insurance_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:focusable="false"
                android:cursorVisible="false"
                android:hint="@string/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_new_insurance_expiration_date"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:focusable="false"
                android:cursorVisible="false"
                android:hint="@string/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_new_insurance_expiration_time"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:focusable="false"
                android:cursorVisible="false"
                android:hint="@string/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

<!--    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_new_insurance_odometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/odometer"/>
    </android.support.design.widget.TextInputLayout>-->

    <include layout="@layout/til_odometer"/>

    <TextView
        android:id="@+id/tv_new_insurance_current_odometer"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spn_new_insurance_company_name"
            android:popupBackground="@color/colorAccent"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />

        <ImageButton
            android:layout_weight="1"
            android:layout_gravity="end"
            android:id="@+id/img_btn_add_company"
            android:background="@null"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_width="24dp"
            android:layout_height="24dp" />
    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_new_insurance_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price"/>
    </android.support.design.widget.TextInputLayout>

    <include layout="@layout/til_note"/>
<!--    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_new_insurance_notes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:inputType="textMultiLine"
            android:maxLines="16"
            android:maxLength="256"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/notes"/>
    </android.support.design.widget.TextInputLayout>-->
</LinearLayout>
